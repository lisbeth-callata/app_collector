<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Detalle de Solicitud"
            app:titleTextColor="@color/white" />

        <!-- Informaci贸n de la Solicitud -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- C贸digo y Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvRequestCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ECO-123456"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDIENTE"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_status_pending"/>
                </LinearLayout>

                <!-- Informaci贸n del Usuario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informaci贸n del Usuario"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Usuario"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvUserPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tel茅fono"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Informaci贸n del Material -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informaci贸n del Material"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Material"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripci贸n"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Direcci贸n Principal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direcci贸n Principal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direcci贸n completa aqu铆"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.2"/>
                </LinearLayout>

                <!-- Secci贸n de Ubicaci贸n Detallada (NUEVA) -->
                <LinearLayout
                    android:id="@+id/layoutLocationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_location_details"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Detalles de Ubicaci贸n"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:layout_marginBottom="8dp"/>

                    <!-- Direcci贸n Espec铆fica del Usuario -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casa/Edificio:"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvAddressUser"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No especificada"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Referencia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referencia:"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvReference"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sin referencia"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Ubicaci贸n Administrativa -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zona:"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvAdministrativeArea"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No disponible"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Coordenadas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coordenadas:"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvCoordinates"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No disponibles"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Fecha y Peso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de creaci贸n:"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvCreatedAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023-01-01"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peso:"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendiente"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de Acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                style="@style/Widget.EcoCollet.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Actualizar"
                app:icon="@drawable/ic_register"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Llamar"
                app:icon="@drawable/ic_phone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavigate"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Navegar"
                app:icon="@drawable/ic_navigation"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMap"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver Mapa"
                app:icon="@drawable/ic_map"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>