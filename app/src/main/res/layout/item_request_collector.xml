<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/gray_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Código y Estados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvRequestCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ECO-123456"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/green_primary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDIENTE"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/bg_status_pending"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvAssignmentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISPONIBLE"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/bg_status_available"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Información de Asignación -->
        <TextView
            android:id="@+id/tvAssignedCollector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponible"
            android:textSize="12sp"
            android:textColor="@color/gray_secondary"
            android:layout_marginBottom="8dp"/>

        <!-- Información del Usuario MEJORADA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="8dp"
                app:tint="@color/gray_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvUserContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono no disponible"
                    android:textSize="12sp"
                    android:textColor="@color/gray_secondary"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Material y Descripción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_material"
                android:layout_marginEnd="8dp"
                app:tint="@color/gray_secondary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Material"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin descripción"
                    android:textSize="12sp"
                    android:textColor="@color/gray_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Dirección MEJORADA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp"
                app:tint="@color/gray_secondary"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dirección completa aquí"
                android:textSize="12sp"
                android:textColor="@color/gray_secondary"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Fecha, Peso y Ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/gray_secondary"/>

                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2023"
                    android:textSize="12sp"
                    android:textColor="@color/gray_secondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_weight"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/gray_secondary"/>

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 kg"
                    android:textSize="12sp"
                    android:textColor="@color/gray_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de Asignación MEJORADOS -->
        <LinearLayout
            android:id="@+id/layoutAssignmentButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClaim"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Reclamar"
                android:textSize="12sp"
                app:icon="@drawable/ic_claim"
                app:iconSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRelease"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Liberar"
                android:textSize="12sp"
                app:icon="@drawable/ic_release"
                app:iconSize="16dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComplete"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Completar"
                android:textSize="12sp"
                app:icon="@drawable/ic_complete"
                app:iconSize="16dp"
                android:backgroundTint="@color/green_primary"/>

        </LinearLayout>

        <!-- Botones de Acción MEJORADOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Actualizar"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMap"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Mapa"
                android:textSize="12sp"
                app:icon="@drawable/ic_map"
                app:iconSize="16dp"
                app:strokeColor="@color/blue"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Llamar"
                android:textSize="12sp"
                app:icon="@drawable/ic_phone"
                app:iconSize="16dp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavigate"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="🚗 Ruta"
                android:textSize="12sp"
                app:icon="@drawable/ic_navigation"
                app:iconSize="16dp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>