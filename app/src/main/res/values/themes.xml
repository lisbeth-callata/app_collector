<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal unificado -->
    <style name="Theme.EcoColletCollector" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/green_dark</item>
    </style>

    <!-- Estilos de overlay (si los necesitas) -->
    <style name="Theme.EcoColletCollector.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:colorBackground">@color/green_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.EcoColletCollector.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:popupMenuStyle">@style/Widget.Material3.PopupMenu</item>
    </style>

    <!-- Estilos de componentes -->
    <style name="Widget.EcoCollet.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>